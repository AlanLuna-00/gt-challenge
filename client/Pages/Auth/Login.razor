@using client.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager

@page "/Login"

<h3>Login</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}

<div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" id="username" @bind="username" class="form-control" />
</div>

<div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" id="password" @bind="password" class="form-control" />
</div>

<button class="btn btn-primary" @onclick="HandleLogin" disabled="@(isLoading)">@(isLoading ? "Logging in..." : "Login")</button>